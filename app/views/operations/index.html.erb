<p style="color: green"><%= notice %></p>
<div class="container d-flex flex-column p-3">
  <h1 class="text-center">Operations</h1>
  <div class="new_operation_link mb-2 pb-3 text-center">
    <button class="btn btn-success">
      <%= link_to "Add new operation", new_operation_path %>
    </button>
  </div>
  <div class="mb-3" id="operations">
    <% @operations.each do |operation| %>
      <%= render operation %>
      <p>
        <button class="btn btn-success">
          <%= link_to "Show this operation", operation %>
        </button>
      </p>
      <div></div>
    <% end %>
  </div>

  <div class="paginate">
    <%= paginate @operations %>
  </div>
</div>