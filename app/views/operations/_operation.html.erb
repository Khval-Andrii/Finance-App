<div class="mt-3" id="<%= dom_id operation %>">
  <p>
    <strong>Amount:</strong>
    <%= operation.amount %>
  </p>

  <p>
    <strong>Odate:</strong>
    <%= operation.odate %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= operation.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <!--<% h = Category.pluck(:id, :name).each_with_object({}) { |v,h| h[v[0]] = v[1] } %>-->
    <% h = Category.pluck(:id, :name).to_h { |v| [v[0], v[1]] } %>
    <%= h[operation.category_id] %>
  </p>

  <p>
    <strong>Types of operations:</strong>
    <% types_of_operation = {1 => "Витрати", 2 => "Доходи"} %>
    <%= types_of_operation[operation.types] %>
  </p>

</div>
