<div class='container mt-4'>
  <div class='col-4 offset-3 w-50'>
    <h1 class="text-center m-3 p-4">Reports generator</h1>

    <div class="d-flex justify-content-center w-100">
      <%= form_with url: "", method: :get do |form| %>
        <div class="mt-3">
          <strong><%= form.label :start_date, "Date YYYY-MM-DD" %></strong>
          <%= form.datetime_field :start_date, value: Date.today.beginning_of_month.strftime("%Y-%m-%dT%H:%M") %>
        </div>
        <div class="mt-3">
          <strong><%= form.label :end_date, "Date YYYY-MM-DD" %></strong>
          <%= form.datetime_field :end_date, value: Date.today.end_of_month.strftime("%Y-%m-%dT%H:%M") %>
        </div>
        <div class="mt-3">
          <strong><%= form.label :"Type of operation" %></strong>
          <% types_of_operation = [["Expenses", 2], ["Income", 1]] %>
          <%= form.select(:type_operations, types_of_operation) %>
        </div>
        <div class="mt-3">
          <strong><%= form.label :category_id, "Category" %></strong>
          <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
        </div>
        <div class="text-center mt-3 p-4">
          <button type="reset" class="btn btn-danger mb-2 me-2" id="btn_reset" name="btn_reset">Reset</button>
          <button type="submit" class="btn btn-success mb-2 me-2" id="btn_dates" formaction="report_by_dates">By dates</button>
          <button type="submit" class="btn btn-primary mb-2 me-2" id="btn_graph" formaction="report_by_category">Chart</button>
        </div>
      <% end %>
    </div>
  </div>
</div>